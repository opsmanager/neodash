{
  "dashboards": {

    "ci": {
      "title" : "CI Monitor",
      "widgets": [
        {
          "view"  : "JenkinsStatus",
          "event" : "opsmanager-jasmine",
          "sizey" : 2
        },
        {
          "view"  : "JenkinsStatus",
          "event" : "opsmanager-fast",
          "sizey" : 2
        },
        {
          "view"  : "JenkinsStatus",
          "event" : "opsmanager-features",
          "sizey" : 2
        }
      ]
    }
  },

  "jobs": [
    {
      "event" : "opsmanager-fast",
      "class" : "JenkinsStatus",
      "every" : "1m",
      "data"  : {
        "code"    : "opsmanager-fast",
        "url"     : "http://opsmanager-ci.local:8080",
        "project" : "opsmanager-fast"
      }
    },
    {
      "event" : "opsmanager-features",
      "class" : "JenkinsStatus",
      "every" : "1m",
      "data"  : {
        "code"    : "opsmanager-features",
        "url"     : "http://opsmanager-ci.local:8080",
        "project" : "opsmanager-features"
      }
    },
    {
      "event" : "opsmanager-jasmine",
      "class" : "JenkinsStatus",
      "every" : "1m",
      "data"  : {
        "code"    : "opsmanager-jasmine",
        "url"     : "http://opsmanager-ci.local:8080",
        "project" : "opsmanager-jasmine"
      }
    }
  ]
}
